{
    "compilerOptions": {
      "outDir": "./dist/",
      "rootDir": "./",
      "noImplicitAny": false,
      "module": "commonjs",
      "target": "es2015",
      "allowJs": true,
      "sourceMap": true,
      "baseUrl": "./", 
      "importHelpers": true, 
      "resolveJsonModule": true,
      "paths": {
        "assets/*" : ["./assets/*"]
      },
      "allowSyntheticDefaultImports": true,     /* Allow default imports from modules with no default export. This does not affect code emit, just typechecking. */
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".vscode"
    ]
  }